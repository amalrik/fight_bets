<h1>Proximas lutas</h1>

<table>
  <tr>
    <th>Categoria</th>
    <th>Red Corner</th>
    <th>   </th>
    <th>Blue Corner</th>
  </tr>
  <% @fights.each do |fight| %>
  <tr>
    <td><%= fight.category  %> </td>
    <td><%= radio_button_tag(:"winner_bet_#{fight.id}", "contender bet") %><%= fight.contender %> </td>
    <td> VS </td>
    <td><%= radio_button_tag(:"winner_bet_#{fight.id}", "challenger bet") %><%= fight.challenger%> </td>
  </tr>
  <% end %>
</table>

