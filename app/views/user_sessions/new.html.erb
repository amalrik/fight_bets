<h1>Login</h1>
  <%= form_tag(user_sessions_path, :method => :post) do %>

  <p>
    username<br />
    <%= text_field_tag "username" %>
  </p>
  <p>
    password<br />
    <%= password_field_tag "password"%>
  </p>
  <p>
    <%= submit_tag 'Submit' %>
  </p>
  <% end %>  

  <%= link_to 'Voltar', users_path %>

